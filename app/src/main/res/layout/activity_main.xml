<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="se.sockertoppar.weathercheck.MainActivity">

    <include
        layout="@layout/toolbar"
        android:id="@+id/toolbar">

    </include>


    <RelativeLayout
        android:id="@+id/swap_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="?android:attr/actionBarSize">

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/swap_view_more_info"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="?android:attr/actionBarSize">

    </RelativeLayout>


    <!--<RelativeLayout-->
        <!--android:id="@+id/weather_layout"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent"-->
        <!--android:layout_margin="16dp"-->
        <!--android:orientation="vertical"-->
        <!--android:layout_below="@+id/toolbar">-->


    <!--</RelativeLayout>-->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/weather_layout"></RelativeLayout>

    <ImageButton
        android:id="@+id/swap_view_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentBottom="true"
        android:src="@drawable/ic_keyboard_arrow_down_white_50dp"
        android:background="@null"
        android:onClick="onClickSwapView"
        />

    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="16dp"
        android:src="@drawable/ic_search_white_24dp"
        android:onClick="onClickSearch"/>

</RelativeLayout>
